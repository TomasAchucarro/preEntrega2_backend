<div class="container bg-danger py-4">
  <h2 class="text-center text-black">Real Time Products</h2>

  <hr class="text-black">

  <div class="card mb-5 col-md-6 offset-md-3">
    <div class="card-header text-center">
      <h5>Productos Creados</h5>
    </div>
    <div class="card-body">
      <form id="form">
        <div class="mb-3">
          <label for="title" class="form-label text-black">Nombre</label>
          <input
            type="text"
            class="form-control"
            name="title"
            id="title"
            required
          >
        </div>
        <div class="mb-3">
          <label for="description" class="form-label text-black">Descripci√≥n</label>
          <input
            type="text"
            class="form-control"
            name="description"
            id="description"
            required
          >
        </div>
        <div class="mb-3">
          <label for="Price" class="form-label text-black">Precio</label>
          <input
            type="number"
            class="form-control"
            name="Price"
            id="Price"
            step="0.01"
            required
          >
        </div>
        <div class="mb-3">
          <label for="code" class="form-label text-black">Codigo</label>
          <input
            type="text"
            class="form-control"
            name="code"
            id="code"
            required
          >
        </div>
        <div class="mb-3">
          <label for="category" class="form-label text-black">Categoria</label>
          <input
            type="text"
            class="form-control"
            name="category"
            id="category"
            required
          >
        </div>
        <div class="mb-3">
          <label for="Stock" class="form-label text-black">Stock</label>
          <input
            type="number"
            class="form-control"
            name="Stock"
            id="Stock"
            required
          >
        </div>
        <button
          type="submit"
          class="btn btn-outline-success form-control fw-bold"
          id="addProduct"
        >Agragar producto</button>
      </form>
    </div>
  </div>

  <hr class="text-black">

  <table
    class="table table-bordered table-striped table-hover text-center mt-5"
    id="productsTable"
  >
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Code</th>
        <th>Category</th>
        <th>Stock</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="tbody">
      {{#each allProducts}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.category}}</td>
          <td>{{this.stock}}</td>
          <td>
            <button
              class="btn btn-danger"
              onclick="deleteProduct('{{this._id}}')"
              id="btnDelete"
            >Borrar</button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
