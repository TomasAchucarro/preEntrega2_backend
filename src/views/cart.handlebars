{{#if emptyCart}}
  <div class="container text-center my-5">
    <h2 class="display-4">Tu carrito esta vacio</h2>
  </div>
{{else}}
  <div class="container py-5" id="cartBody">
    <div class="row justify-content-center">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Filtrar por:</span>
              <a href="#!" class="text-body">precio <i class="fas fa-angle-down"></i></a></p>
          </div>
        </div>

        {{#each carts}}
          <div class="card rounded-3 mb-4">
            <div class="card-body p-4">
              <div class="row align-items-center">
                <div class="col-md-2 col-lg-2 col-xl-2">
                  <img src="/img/{{this.product.thumbnails.0}}" alt="{{this.product.title}}" class="img-fluid">
                </div>
                <div class="col-md-5 col-lg-5 col-xl-4">
                  <p class="lead fw-bold mb-2">{{this.product.title}}</p>
                  <p class="mb-0"><span class="text-muted">Categoria:</span> {{this.product.category}}</p>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 text-center">
                  <label class="fw-bold">Cantidad</label>
                  <input type="number" value="{{this.quantity}}" class="form-control form-control-sm text-center fw-bold" readonly>
                </div>
                <div class="col-md-2 col-lg-2 col-xl-2 text-center">
                  <h5 class="mb-0">${{this.product.price}}</h5>
                </div>
                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                  <a href="#!" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}

        <div class="card">
          <div class="card-body text-center">
            <button type="button" class="btn btn-warning btn-block btn-lg" onclick="emptyCart()">Comprar</button>
          </div>
        </div>

      </div>
    </div>
  </div>
{{/if}}
